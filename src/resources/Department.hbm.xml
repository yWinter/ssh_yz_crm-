<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.lanou.staff.domain.Department" table="crm_department">
        <id name="depID">
            <generator class="uuid"/>
        </id>
        <property name="depName" length="50"/>

        <set name="posts" inverse="false" lazy="false" cascade="all">
            <key column="depId"></key>
            <one-to-many class="com.lanou.staff.domain.Post"/>
        </set>
    </class>
</hibernate-mapping>